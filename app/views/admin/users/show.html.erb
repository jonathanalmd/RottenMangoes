<%= link_to "Back to admin page  ", admin_users_path %><br/>

<% if current_user.admin %>
  <h1><%= @user.full_name %> (<%= link_to "edit", edit_admin_user_path(@user) %> , <%= link_to "delete", admin_user_path(@user), method: :delete, data: {confirm: "You sure?"}%>) </h1>
  <h3><%= @user.email %></h3>
  <p><b>Created at </b><p> <em><%= @user.created_at %></em>
  <p><b>Last update </b><p> <em><%= @user.updated_at %></em>

<!-- Not logged -->
<% else %>
  <p>Please <%= link_to "log in", new_session_path %> as admin to access this page.</p> 
  <%= link_to "Back to all movies", movies_path %><br/>

<% end %>
