<h1>Log In</h1>

<!-- Simple FORM_TAG: submit a POST request to the sessions_path, triggering sessions#create action -->
<%= form_tag sessions_path do %>

  <div>
    <%= label_tag :email %><br/>
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password %><br/>
    <%= password_field_tag :password %>
  </div>

  <div><%= submit_tag "Log In" %></div>

<% end %>